@model DomainObjects.ViewModels.ReservationListViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}
@section Scripts{

    <script src="~/lib/angular/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js"></script>
    <script src="~/js/app.js"></script>
    <script>
        app.value("userid", '@Html.Raw(Model.SignedInUserId)');
    </script>
    <script src="~/js/ReservationController.js"></script>

}

<div class="row" ng-app="app">
    <div class="row">
        <div class="col-xs-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-lg"><span class="glyphicon glyphicon-plus" style="font-size:2.5em;"></span>Add A New Reservation</a>
        </div>
    </div>
    <br />

    @await Component.InvokeAsync("UserReservations", new { rlvm = Model })
</div>
