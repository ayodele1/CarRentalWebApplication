@using Microsoft.AspNetCore.Http.Extensions;
@using DomainObjects;
@using Microsoft.AspNetCore.Http;
@{
    var baseUrl = Context.Request.GetDisplayUrl();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MYCarRental</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/bootswatch/paper/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/jquery-ui/themes/base/datepicker.css" />
        <link rel="stylesheet" href="~/lib/jquery-ui/themes/base/all.css" />
        <link rel="stylesheet" href="~/css/Custom.css" />

    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/lib/bootswatch/flatly/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/jquery-ui/themes/base/datepicker.css" />
        <link rel="stylesheet" href="~/lib/jquery-ui/themes/base/all.css" />
        <link rel="stylesheet" href="~/css/Custom.css" />
    </environment>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" id="homepageLinks">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">MyCarRental</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li><a asp-area="" asp-controller="Home" asp-action="Index">RENT A CAR</a></li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">RENT A CAR</a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/Home/#reservationFormDiv">MAKE A RESERVATION</a></li>
                            <li><a asp-controller="Home" asp-action="SearchReservation">UPDATE/CANCEL RESERVATION</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">CAR INVENTORY</a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a asp-controller="Home" asp-action="CarInventory" asp-route-filterId="@(VehicleType.All)">ALL</a></li>
                            <li><a asp-controller="Home" asp-action="CarInventory" asp-route-filterId=@(VehicleType.Car)>CARS</a></li>
                            <li><a asp-controller="Home" asp-action="CarInventory" asp-route-filterId="@(VehicleType.Suv)">SUVS</a></li>
                            <li><a asp-controller="Home" asp-action="CarInventory" asp-route-filterId="@(VehicleType.Truck)">TRUCKS</a></li>
                            <li><a asp-controller="Home" asp-action="CarInventory" asp-route-filterId="@(VehicleType.Luxury)">LUXURY/EXOTIC CARS</a></li>
                            @*<li class="divider"></li>*@
                        </ul>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Dashboard" asp-action="Index">MY DASHBOARD</a></li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a>@User.Identity.Name</a></li>
                        <li><a asp-controller="Auth" asp-action="Logout">SIGN OUT</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Auth" asp-action="Login">SIGN IN</a></li>
                        <li><a asp-controller="Auth" asp-action="Register">SIGN UP</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br /><br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - ABCCarRental</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-ui/jquery-ui.js"></script>
        <script src="~/js/Custom.js"></script>
        <script src="~/js/GoogleService.js"></script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyChWlnXt3ZDM74QSanoxvJoqolkw1R0RXw&libraries=places&callback=initAutocomplete"
                async defer></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>             
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-ui/jquery-ui.js"></script>       
        <script src="~/js/Custom.js"></script>
        <script src="~/js/GoogleService.js"></script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyChWlnXt3ZDM74QSanoxvJoqolkw1R0RXw&libraries=places&callback=initAutocomplete"
                async defer></script>
        <script src="~/js/jquery.flip.min.js"></script> 
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
