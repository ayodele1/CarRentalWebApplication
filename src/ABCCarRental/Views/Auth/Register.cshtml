@model DomainObjects.ViewModels.RegistrationViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Sign Up";
}


<div class="row">
    <h3 class="pageHeading">REGISTER</h3>
    <p><i>*All fields are compulsory</i></p>
    <form asp-controller="Auth" asp-action="Register" method="post" role="form" class="form-horizontal">
        <fieldset class="col-md-8">
            <div class="form-group">
                <label class="col-lg-2">FirstName:</label>
                <div class="col-lg-5">
                    <input type="text" class="form-control contactInfoTextfield" id="reservationFirstName" asp-for="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2">LastName:</label>
                <div class="col-lg-5">
                    <input type="text" class="form-control contactInfoTextfield" id="reservationLastName" asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col col-lg-2">Email Address:</label>
                <div class="col-lg-5">
                    <input type="email" class="form-control contactInfoTextfield" id="reservationEmail" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                </div>
            <div class="form-group">
                <label class="col col-lg-2">Phone Number:</label>
                <div class="col-lg-5">
                    <input type="text" class="form-control contactInfoTextfield" id="reservationPhone" asp-for="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                </div>
            <div class="form-group">
                <label class="col col-lg-2">Password:</label>
                <div class="col-lg-5">
                    <input type="password" class="form-control contactInfoTextfield" id="registrationPassword" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                </div>
            <br />
            <div class="form-group">
                <div class="col-lg-3 col-lg-offset-3">
                    <input type="submit" value="SIGN UP" class="btn btn-primary btn-lg" />
                </div>
            </div>
        </fieldset>
    </form>
</div>
