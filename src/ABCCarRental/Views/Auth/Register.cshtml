@model DomainObjects.ViewModels.RegistrationViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Sign Up";
}


<div class="row">
    <br />
    <h4>REGISTER</h4>
    <div class="login-form col-md-8 col-md-offset-3">
        <form asp-controller="Auth" asp-action="Register" method="post" role="form" id="userregistrationform">
            <fieldset>
                <legend>Please Complete all Fields</legend>
                <div class="form-group">
                    <label class="col col-lg-3">FirstName:</label>
                    <input type="text" class="form-control contactInfoTextfield" id="reservationFirstName" asp-for="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col col-lg-3">LastName:</label>
                    <input type="text" class="form-control contactInfoTextfield" id="reservationLastName" asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col col-lg-3">Email Address:</label>
                    <input type="email" class="form-control contactInfoTextfield" id="reservationEmail" asp-for="EmailAddress" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col col-lg-3">Phone Number:</label>
                    <input type="text" class="form-control contactInfoTextfield" id="reservationPhone" asp-for="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col col-lg-3">Password:</label>
                    <input type="password" class="form-control contactInfoTextfield" id="registrationPassword" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-lg-3">
                        <input type="submit" value="MAKE RESERVATION" class="btn btn-default btn-lg" />
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
