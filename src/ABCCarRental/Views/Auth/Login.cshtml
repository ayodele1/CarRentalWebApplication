@model DomainObjects.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="row">
    <br /><br />
    <h3 class="pageHeading col-md-offset-2">&nbsp; LOGIN</h3>
        <form asp-controller="Auth" asp-action="Login" role="form" method="post" class="form-horizontal col-md-7 col-md-offset-2" id="loginform">
            <fieldset clas="col-md-5 col-md-offset-1">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group form-group-lg">
                    <label class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-5">
                        <input type="email" class="input input-lg" placeholder="Enter Email" asp-for="Email" style="width:100%;" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group form-group-lg">
                    <label class="col-lg-2 control-label">Password</label>
                    <div class="col-lg-5">
                        <input type="password" class="input input-lg" asp-for="Password" placeholder="Enter Password" style="width:100%;" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <input type="submit" value="LOGIN" class="btn btn-primary btn-lg"/>
                    </div>
                </div>
            </fieldset>
        </form>
</div>


